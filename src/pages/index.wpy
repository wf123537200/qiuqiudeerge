<script>
  import wepy from 'wepy'
  import Content from '../components/content'

  export default class Index extends wepy.page {
    config = {
      navigationBarTitleText: '球球的儿歌'
    }

    components = {
      content: Content
    }

    data = {
      motto: '',
      userInfo: {}
    }

    computed = {}

    events = {}

    methods = {
      playsongs(event) {
        wepy.navigateTo({
          url: '/pages/playsongs'
        })
      },
      playstory(event) {
        wepy.navigateTo({
          url: '/pages/playstory'
        })
      }
    }

    onLoad() {
      this.$parent.getUserInfo((userInfo) => {
        this.setData({
          userInfo: userInfo,
          motto: '您好！' + userInfo.nickName
        })
      })
    }
  }
</script>
