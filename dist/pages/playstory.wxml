
  <view class="container">
    <view class="audio-wrap" for="{{songs}}" key="{{index}}">
      <!-- audio.wxml -->
      <audio data-index="{{index}}" bindtap="setCurAudio" poster="{{item.poster}}" name="{{item.name}}" author="{{item.author}}" src="{{item.src}}" id="{{index}}" controls loop/>
      <view class="total">
        <text>总时长： {{item.maxTime}}</text>
      </view>
    </view>
    <view class="btn-wrap">
      <button class="{{playBtnClass}}" type="" bindtap="audioCtrl"/>
      <button class="btn iconfont icon-chongbo" type="" bindtap="audioReStart"/>
    </view>
  </view>